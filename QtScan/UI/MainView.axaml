<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:QtScan.UI.ViewModels"
             mc:Ignorable="d"
             x:Class="QtScan.UI.MainView"
             x:DataType="vm:MainViewModel">
    <StackPanel>
        <TextBox Text="{Binding QrText, Mode=TwoWay}" AcceptsReturn="True" Height="100" />
        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding StartScanCommand}" Width="70" IsVisible="{Binding IsNotScanning}">Scan</Button>
            <Button Command="{Binding StopScanCommand}" Width="70" IsVisible="{Binding IsScanning}">Stop</Button>
            <ComboBox ItemsSource="{Binding CameraDevices}" SelectedItem="{Binding SelectedCamera}" Width="240">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Name="btnOpenFile" Width="70">File</Button>
        </StackPanel>
        <Image Source="{Binding PreviewImage}" Margin="10" />
    </StackPanel>
</UserControl>
