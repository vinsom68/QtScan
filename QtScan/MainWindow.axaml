<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="800"
        x:Class="QtScan.MainWindow"
        Title="QtScan" Height="420" Width="280">
   

	
   <StackPanel>
      <TextBox Name="QrText" TextChanged="QrText_TextChanged" Height="100"/>
      <StackPanel x:Name="contentWrapper" Orientation="Horizontal">
        <Button Name="btnStartScan" Click="OnBtnStartScan">Scan</Button>
        <Button Name="btnStopScan" Click="OnBtnStopScan" IsVisible="false">Stop</Button>
        <ComboBox Name="cboDevices"></ComboBox>
      </StackPanel>
      <Image Name="QrImage" Margin="10"></Image>
   </StackPanel>
	
</Window>
